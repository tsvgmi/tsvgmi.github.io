-# Render the lyric block only (transpose, split the note out)
- lyric  = sinfo[:lyric]
- offset = key_offset(sinfo[:song_key], singer_key)
- lyric  = lyric.sub(/>>>>>.*$/mo, '').sub(/^.*<<<<</mo, '')
- tlyric = ListHelper.transpose_lyric(lyric, offset, tokey:singer_key, tclass:'t2lyric')
- tlyric = tlyric.sub(/^.*==/m, '')
= tlyric.gsub(/\s*\r/, '').gsub(/^---/, '<hr/>').gsub(/\n/, "<br/>\n")
