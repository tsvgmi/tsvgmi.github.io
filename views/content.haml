:css
  .qtip {font-size:80%}
  .performer {color:yellow}

.container
  %ul.list-unstyled
    - plist.sort_by{|e| e[:href].split('/')[5]}.each do |sentry|
      %li
        %a(href='#' title="#{sentry[:performer]}" data-toggle='tooltip' data-placement='right')
          %span.badge.badge-secondary.pull-right= "#{sentry[:play_key]}"
        - if value = sentry[:play_link]
          %a.pull-right(href=value target='play_link')
            %i.fa.fa-music
            &nbsp;
        - qref = "<div class=qtip><span class=pull-left>#{sentry[:artist]}</span><span class='pull-right performer'>#{sentry[:performer]}</span><hr/>#{sentry[:preview]}</div>"
        %a.small(href="#{sentry[:href]}" target='if_content' data-toggle='tooltip' title="#{qref}")= sentry[:name]

:javascript
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip({"html":true}); 
  });
